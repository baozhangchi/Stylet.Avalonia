<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="https://github.com/sealoyal2018/stylet.avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Stylet.Samples.NavigationController.Pages.Page2View">
    <Grid>
        <StackPanel>
            <TextBlock Text="This is page 2"></TextBlock>
            <TextBlock Text="{Binding Initiator, StringFormat='You got here from {0}'}"/>
            <Button Command="{s:Action NavigateToPage1}">Go to page 1</Button>
        </StackPanel>
    </Grid>
</UserControl>
